{
  "name": "project-ecofud",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n server,client 'npm run dev:server' 'npm run dev:client'",
    "dev:server": "nodemon",
    "dev:client": "webpack --mode development --watch --config=./src/client/webpack.config.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack --mode production",
    "heroku-postbuild": "yarn build:server",
    "start": "node build/index.js"
  },
  "dependencies": {
    "@radar/lnrpc": "^0.11.1-beta.1",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^15.3.0",
    "@types/pg": "^7.14.11",
    "@types/validator": "^13.1.3",
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-node": "^9.1.1"
  }
}
